<%= form_for(@log) do |f| %>
  <%= hidden_field_tag :dish_id, @dish.id %>
  <%= hidden_field_tag :list_id, @list.id if @list.present? %>
  <p class="add-cooklog"><i class="fas fa-utensils"></i> クックログを追加する</p>
  <div class="row">
    <div class="col-md-9">
      <div class="field">
        <%= f.text_area :content, placeholder: "クックメモ" %>
      </div>
    </div>
  </div>
<% end %>